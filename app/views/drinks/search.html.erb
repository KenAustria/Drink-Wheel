<div class = "search-box">
<%= form_for :search, url: search_drinks_path, method: :get do |f| %>
<%= f.text_field :name, placeholder: "Thirst" %>
<%= f.submit class: "btn btn-primary" %>
<% end %>
</div>

<div class="drinks_search">
	<% @drinks.each do |drink| %>
	<div class="col-sm-4">
    	<%= link_to drink_path(drink) do %>
	    	<div class="thumbnail">
		    	<div class="row">
				    <div class="col-sm-5">
				      <%= image_tag drink.file.url %>
					  </div>
				    <div class="col-sm-7">
				      <div class="caption">
				        <h4><%= drink.name %></h4>
				        <p><%= drink.description %></p>
				      </div>
			      </div>
		      </div>
	      </div>
      <% end %>
    </div>
<% end %>
