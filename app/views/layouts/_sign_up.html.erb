<div class="modal-dialog" role="document" id="SignUp">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Sign up for Drink Wheel!</h4>
      <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-primary btn-block" do %>
      <i class="fa fa-facebook-square" aria-hidden="true"></i>
      Facebook Log In
      
      <%end%>
    </div>

    <div class="modal-body">
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
        <%= devise_error_messages! %>
        <%= f.email_field :email, required: :true, hide_label: :true, placeholder: "Email" %>
        <%if @validatable %>
        <%= f.password_field :password, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Password", help: "Must be #{@minimum_password_length} characters minimum" %>
      <% else %>
        <%= f.password_field :password, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Password" %>
      <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Confirm password" %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
        <%= f.hidden_field :provider %>
        <%= f.hidden_field :uid %>
        <%= link_to "Close", "#", class: "btn btn-default", "data-dismiss" =>"modal" %>
        <%= f.submit "Sign up", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="modal-footer">
      <h5>Already have an account?</h5><%= link_to "Log In", "#", onclick: "togglePanes('#SignUp','#SignIn')" %>
    </div>
  </div>
</div>
