<!DOCTYPE html>
<html>
  <head>
    <title>DrinkWheel</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "DRINK WHEEL", root_url, class: "navbar-brand" %>
        </div>    
        <div class = "search-box">
          <%= form_for :search, url: search_drinks_path, method: :get do |f| %>
          <%= f.text_field :name, placeholder: "Search For A Drink" %>
            <button type=“submit” class=“bin ban-primary”>
              <i class="fa fa-search" aria-hidden="true"></i>
            </button> 
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
<!-- Sign Up Modal -->
          <li>
            <% if user_signed_in? %>
              <%= link_to 'Welcome, Foo', "#"%>
            <% else %>
              <div class="modal fade" id="SignUpSignInModal" tabindex="-1"  role="dialog" aria-labelledby="myModalLabel">
                <%= render '/layouts/sign_up' %>
                <%= render '/layouts/sign_in' %>
              </div>
              <%= link_to 'Log In/Sign Up', "#", "data-toggle" =>"modal", "data-target" =>"#SignUpSignInModal" %>
            <% end %>
          </li>
          <li><%= link_to 'Wheels', wheels_path %></li>
          <li>
            <%= link_to 'IBA Official Cocktails', drinks_path %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div id="flash">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
